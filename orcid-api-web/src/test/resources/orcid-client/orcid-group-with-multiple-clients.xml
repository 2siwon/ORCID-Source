<!-- 
    This is an example file to request creation of client details for use in
    OAuth2 authorization requests. The file will be sent from the client system
    adminstrators to the ORCID administrators (as an email attachement). 
-->
<orcid-client-group xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.orcid.org/ns/orcid ../../../../../orcid-model/src/main/resources/orcid-client-group-1.3.xsd"
 xmlns="http://www.orcid.org/ns/orcid" type="premium-institution">
    <group-name>TheGroup</group-name>
    <email>group-with-multiple-clients@orcid.net</email>
    <orcid-client type="creator">
        <display-name>client1</display-name>
        <website>http://client1</website>
        <short-description>Description for client1</short-description>
        <redirect-uris>
            <redirect-uri type="default">https://developers.google.com/oauthplayground</redirect-uri>
        </redirect-uris>
    </orcid-client>
    <orcid-client type="creator">
        <display-name>client2</display-name>
        <website>http://client2</website>
        <short-description>Description for client2</short-description>
        <redirect-uris>
            <redirect-uri type="default">https://developers.google.com/oauthplayground</redirect-uri>
        </redirect-uris>
    </orcid-client>  
    <orcid-client type="creator">
        <display-name>client3</display-name>
        <website>http://client3</website>
        <short-description>Description for client3</short-description>
        <redirect-uris>
            <redirect-uri type="default">https://developers.google.com/oauthplayground</redirect-uri>
        </redirect-uris>
    </orcid-client>  
    <orcid-client type="creator">
        <display-name>client4</display-name>
        <website>http://client4</website>
        <short-description>Description for client4</short-description>
        <redirect-uris>
            <redirect-uri type="default">https://developers.google.com/oauthplayground</redirect-uri>
        </redirect-uris>
    </orcid-client>      
</orcid-client-group>
