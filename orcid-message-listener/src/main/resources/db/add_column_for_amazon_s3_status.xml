<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="record_status" columnName="amazon_s3"/>
            </not>            
		</preConditions>
		<!-- Indicates the number of times it have failed to be sent to S3 -->
		<sql>ALTER TABLE record_status ADD amazon_s3 integer;</sql>		
	</changeSet>		
	
	<changeSet id="SET-DEFAULT-VALUE-TO-AMAZON-S3-COLUMN" author="Angel Montenegro">
		<sql>UPDATE record_status SET amazon_s3=0;</sql>
	</changeSet>
	
	<changeSet id="AMAZON-S3-INDEX" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">
			<not>
				<indexExists indexName="amazon_s3_index" tableName="record_status" />
			</not>
		</preConditions>
		<sql>create index amazon_s3_index on record_status(amazon_s3);</sql>
	</changeSet>
</databaseChangeLog>