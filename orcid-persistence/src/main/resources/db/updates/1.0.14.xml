<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
        
    <changeSet id="ADD-PROFILE-ADDRESS-VISIBILITY" author="James Bowen">
          <addColumn tableName="profile">
            <column name="profile_address_visibility" type="${visibility.type}" />
        </addColumn>
    </changeSet>  
    
    <changeSet id="ADD-AFFILATION_ADDRESS-VISIBILITY" author="James Bowen">
          <addColumn tableName="affiliation">
            <column name="affiliation_address_visibility" type="${visibility.type}" />
        </addColumn>
    </changeSet>  
    
</databaseChangeLog>