<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
        
    <changeSet id="ADD-EMAIL-HASH-COLUMN-TO-EMAIL-TABLE" author="Angel Montenegro">
         <preConditions onFail="MARK_RAN">
         	<not>
         		<columnExists tableName="email" columnName="email_hash"/>
         	</not>
         </preConditions>
         <addColumn tableName="email">
             <column name="email_hash" type="VARCHAR(500)" />
         </addColumn>
     </changeSet>

	<changeSet id="ADD-EMAIL-HASH-COLUMN-TO-EMAIL-EVENT-TABLE" author="Angel Montenegro">
         <preConditions onFail="MARK_RAN">
         	<not>
         		<columnExists tableName="email_event" columnName="email_hash"/>
         	</not>
         </preConditions>
         <addColumn tableName="email_event">
             <column name="email_hash" type="VARCHAR(500)" />
         </addColumn>
     </changeSet>

</databaseChangeLog>