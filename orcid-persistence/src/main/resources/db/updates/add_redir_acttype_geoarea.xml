<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet author="Shobhit Tyagi" id="ADD-REDIRECT-ACTTYPE-GEOAREA-COLUMN">
	    <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="client_redirect_uri" columnName="uri_act_type"/>
                <columnExists tableName="client_redirect_uri" columnName="uri_geo_area"/>
            </not>
		</preConditions>
	    <addColumn tableName="client_redirect_uri">
				<column name="uri_act_type" type="JSON" defaultValue='{"import-works-wizard" : ["Articles"]}' />
				<column name="uri_geo_area" type="JSON" defaultValue='{"import-works-wizard" : ["Global"]}' />
		</addColumn>
    </changeSet>
</databaseChangeLog>