<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="ADD-REVOCATION-DATE-TO-TOKEN" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">
			<not>
				<columnExists tableName="oauth2_token_detail" columnName="revocation_date"/>
			</not>
		</preConditions>
		<addColumn tableName="oauth2_token_detail">
			<column name="revocation_date" type="TIMESTAMP WITH TIME ZONE" />
		</addColumn>									
	</changeSet>
	
</databaseChangeLog>		