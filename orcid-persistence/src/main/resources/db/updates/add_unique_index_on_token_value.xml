<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
            
    <changeSet id="ADD-UNIQUE-INDEX-ON-TOKEN" author="Angel Montenegro">
    	<preConditions>
    		<not>
    			<indexExists indexName="token_value_index" />
    		</not>
    	</preConditions>
    	<sql>CREATE UNIQUE INDEX CONCURRENTLY token_value_index ON oauth2_token_detail(token_value)</sql>
        <sql>DROP INDEX CONCURRENTLY token_index</sql>
        <sql>ADD CONSTRAINT unique_token_value USING INDEX token_value_index</sql>
    </changeSet>
    
</databaseChangeLog>