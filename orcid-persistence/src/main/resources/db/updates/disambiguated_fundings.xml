<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="CREATE-FOUNDING-TABLES" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="org_funding_relation" />
			</not>
		</preConditions>		

		<!-- org_funding_relation -->
		<createTable tableName="org_funding_relation">
			<column name="id" type="bigint">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="org_funding_relation_pkey" />
			</column>
			<column name="org_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="orcid" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="title" type="VARCHAR(1000)">
				<constraints nullable="false" />
			</column>
			<column name="description" type="VARCHAR(5000)">
				<constraints nullable="false" />
			</column>
			<column name="type" type="VARCHAR(25)">
				<constraints nullable="false" />
			</column>
			<column name="start_day" type="integer" />
			<column name="start_month" type="integer" />
			<column name="start_year" type="integer" />
			<column name="end_day" type="integer" />
			<column name="end_month" type="integer" />
			<column name="end_year" type="integer" />
			<column name="currency_code" type="VARCHAR(3)" />
			<column name="amount" type="NUMERIC(100)" />
			<column name="url" type="VARCHAR(350)" />
			<column name="contributors_json" type="TEXT" />
			<column name="visibility" type="VARCHAR(20)" />
			<column name="source_id" type="VARCHAR(255)" />
			<column name="date_created" type="TIMESTAMP WITH TIME ZONE" />			
			<column name="last_modified" type="TIMESTAMP WITH TIME ZONE" />			
		</createTable>
		
		<!-- funding_external_identifier -->
		<createTable tableName="funding_external_identifier">
			<column name="funding_external_identifier_id" type="bigint">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="funding_external_identifier_pkey" />
			</column>
			<column name="org_funding_relation_id" type="bigint">
				<constraints nullable="false"/>
			</column>
			<column name="type" type="VARCHAR(255)" />
			<column name="value" type="VARCHAR(2084)" />
			<column name="url" type="VARCHAR(350)" />
		</createTable>
		
		<addUniqueConstraint constraintName="funding_external_identifier_constraints" tableName="funding_external_identifier" columnNames="type,value,url"/>
        <addForeignKeyConstraint constraintName="org_funding_relation_org_id_fk" baseTableName="org_funding_relation" baseColumnNames="org_id" referencedTableName="org" referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="org_funding_relation_orcid_fk" baseTableName="org_funding_relation" baseColumnNames="orcid" referencedTableName="profile" referencedColumnNames="orcid" />
        <addForeignKeyConstraint constraintName="funding_external_identifiers_fk" baseTableName="funding_external_identifier" baseColumnNames="org_funding_relation_id" referencedTableName="org_funding_relation" referencedColumnNames="id" />
	</changeSet>
	
	<changeSet id="CREATE-SEQUENCES" author="Angel Montenegro" dbms="postgresql">
        <createSequence sequenceName="org_funding_relation_seq" startValue="1000"/>
        <createSequence sequenceName="funding_external_identifier_seq" startValue="1000"/>
    </changeSet>
    
    <changeSet id="CREATE-AUTOCOLS" author="Angel Montenegro" dbms="hsqldb">
        <addAutoIncrement tableName="org_funding_relation" columnName="id" columnDataType="bigint"/>
        <addAutoIncrement tableName="funding_external_identifier" columnName="funding_external_identifier_id" columnDataType="bigint"/>
    </changeSet>
</databaseChangeLog>                   