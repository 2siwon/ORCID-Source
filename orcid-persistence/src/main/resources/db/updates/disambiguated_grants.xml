<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="CREATE-GRANT-TABLES" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="grant_external_identifier" />
			</not>
		</preConditions>		
				
		<dropTable cascadeConstraints="true"            
            tableName="grant_contributor"/>							
		<dropTable cascadeConstraints="true"            
            tableName="funding_grant"/>
		<dropTable cascadeConstraints="true"            
            tableName="grant_source"/>
		<dropTable cascadeConstraints="true"            
            tableName="profile_grant"/>
            

		<!-- org_funding_relation -->
		<createTable tableName="profile_grant">
			<column name="id" type="bigint">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="profile_grant_pkey" />
			</column>
			<column name="org_id" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="orcid" type="VARCHAR(255)">
				<constraints nullable="false" />
			</column>
			<column name="title" type="VARCHAR(1000)">
				<constraints nullable="false" />
			</column>
			<column name="type" type="VARCHAR(25)">
				<constraints nullable="false" />
			</column>
			<column name="currency_code" type="VARCHAR(3)">
				<constraints nullable="false" />
			</column>
			<column name="amount" type="VARCHAR(100)">
				<constraints nullable="false" />
			</column>
			<column name="description" type="VARCHAR(5000)" />
			<column name="start_day" type="integer" />
			<column name="start_month" type="integer" />
			<column name="start_year" type="integer" />
			<column name="end_day" type="integer" />
			<column name="end_month" type="integer" />
			<column name="end_year" type="integer" />			
			<column name="url" type="VARCHAR(350)" />
			<column name="contributors_json" type="TEXT" />
			<column name="visibility" type="VARCHAR(20)" />
			<column name="source_id" type="VARCHAR(255)" />
			<column name="date_created" type="TIMESTAMP WITH TIME ZONE" />			
			<column name="last_modified" type="TIMESTAMP WITH TIME ZONE" />			
		</createTable>
		
		<!-- funding_external_identifier -->
		<createTable tableName="grant_external_identifier">
			<column name="grant_external_identifier_id" type="bigint">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="grant_external_identifier_pkey" />
			</column>
			<column name="profile_grant_id" type="bigint">
				<constraints nullable="false"/>
			</column>
			<column name="type" type="VARCHAR(255)" />
			<column name="value" type="VARCHAR(2084)" />
			<column name="url" type="VARCHAR(350)" />
			<column name="date_created" type="TIMESTAMP WITH TIME ZONE"/>
            <column name="last_modified" type="TIMESTAMP WITH TIME ZONE"/>
		</createTable>
		
		<addUniqueConstraint constraintName="grant_external_identifier_constraints" tableName="grant_external_identifier" columnNames="type,value,url"/>
        <addForeignKeyConstraint constraintName="profile_grant_org_id_fk" baseTableName="profile_grant" baseColumnNames="org_id" referencedTableName="org" referencedColumnNames="id" />
        <addForeignKeyConstraint constraintName="profile_grant_orcid_fk" baseTableName="profile_grant" baseColumnNames="orcid" referencedTableName="profile" referencedColumnNames="orcid" />
        <addForeignKeyConstraint constraintName="grant_external_identifiers_fk" baseTableName="grant_external_identifier" baseColumnNames="profile_grant_id" referencedTableName="profile_grant" referencedColumnNames="id" />
	</changeSet>
	
	<changeSet id="CREATE-SEQUENCES" author="Angel Montenegro" dbms="postgresql">
        <createSequence sequenceName="profile_grant_seq" startValue="1000"/>
        <createSequence sequenceName="grant_external_identifier_seq" startValue="1000"/>
    </changeSet>
    
    <changeSet id="CREATE-AUTOCOLS" author="Angel Montenegro" dbms="hsqldb">
        <addAutoIncrement tableName="profile_grant" columnName="id" columnDataType="bigint"/>
        <addAutoIncrement tableName="grant_external_identifier" columnName="grant_external_identifier_id" columnDataType="bigint"/>
    </changeSet>
</databaseChangeLog>                   