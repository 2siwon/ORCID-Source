<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
        
    <changeSet id="ADD-FIELDS-TO-WORK" author="Angel Montenegro">
         <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="work" columnName="orcid"/>
            </not>
        </preConditions>
        <addColumn tableName="work">
            <column name="orcid" type="VARCHAR(19)">
            	<constraints nullable="false" />
            </column>            
            <column name="added_to_profile_date" type="TIMESTAMP WITHOUT TIME ZONE" />
            <column name="visibility" type="VARCHAR(19)">
            	<constraints nullable="false" />
            </column>
            <column name="display_index" type="bigint" defaultValue="0"/>
            <column name="source_id" type="VARCHAR(19)" />
            <column name="client_source_id" type="VARCHAR(20)"/>            
        </addColumn>
        
        <addForeignKeyConstraint constraintName="work_orcid_fk" baseTableName="work" baseColumnNames="orcid" referencedTableName="profile" referencedColumnNames="orcid" />
        <addForeignKeyConstraint constraintName="work_source_id_fk" baseTableName="work" baseColumnNames="source_id" referencedTableName="profile" referencedColumnNames="orcid"/>
        <addForeignKeyConstraint constraintName="work_client_source_id_fk" baseTableName="work" baseColumnNames="client_source_id" referencedTableName="client_details" referencedColumnNames="client_details_id"/>
     </changeSet>

</databaseChangeLog>