<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">                   
	<changeSet id="RECORD-LOCKED" author="Angel Montenegro">
		<preConditions onFail="MARK_RAN">            
            <not>
                <columnExists tableName="profile" columnName="record_locked"/>
            </not>
		</preConditions>
		<renameColumn tableName="profile" oldColumnName="account_non_locked" newColumnName="record_locked"/>		
	</changeSet>
	<changeSet id="RECORD-LOCKED-DEFAULT-VALUE" author="Angel Montenegro">
		<addDefaultValue 
            tableName="profile"
            columnName="record_locked"
            defaultValue="false" />
		<sql>UPDATE profile SET record_locked=false</sql>           
	</changeSet>		
</databaseChangeLog>                   